func myPow(x float64, n int) float64 {
    ans := 1.0
    var isN bool
    if n < 0{
        n = -1 * n
        isN = true
    }
    for n > 0{
        if n % 2 == 0 { //2 10
            x = x * x //x=4 16 256
            n = n/2 //n=5 2 1
        }else{
            ans = ans * x // ans = 4  4*256
            n = n-1 // 4 0
        }
    }

    if isN {
        return 1/ans
    }
    return ans
}
